<?xml version="1.0" encoding="UTF-8"?>
<!--#!autodoc
System config form: Two Factory Authentication

This form is used for managing settings two factor authentication
-->
<form i18nBaseUri="system-config.two-factor-auth:" feature="twoFactorAuthentication">
	<tab id="admin">
		<fieldset id="admin" sortorder="10">
			<field name="admin_enabled"      control="yesNoSwitch" required="false" />
			<field name="admin_app_name"     control="textinput"   required="false" />
			<field name="admin_enforced"     control="yesNoSwitch" required="false" />
			<field name="admin_trust_period" control="spinner"     required="false" defaultvalue="7" />
		</fieldset>
	</tab>
</form>