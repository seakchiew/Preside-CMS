<?xml version="1.0" encoding="UTF-8"?>
<!--#!autodoc
Task manager: Settings form

This form is used for general configuration of the task manager
-->
<form i18nBaseUri="cms:taskmanager.configform.">
	<tab id="default">
		<fieldset id="default">
			<field name="scheduledtasks_enabled" control="yesnoswitch"  required="false"             />
			<field name="keep_logs_for_days"     control="spinner"      required="false" default="7" />
			<field name="site_context"           control="objectpicker" required="true" object="site" feature="sites" />
		</fieldset>
	</tab>
</form>